{
  "name": "c-hat",
  "productName": "C-Hat",
  "version": "1.0.0",
  "description": "Embedding chat apps since 2016",
  "scripts": {
    "build": "npm run bundle && npm run pack",
    "bundle": "node build/bundle.js",
    "package": "node build/package.js",
    "start": "npm run bundle && electron ./app --devtools",
    "watch": "nodemon -e js,css,html,json --watch app build/bundle.js"
  },
  "author": "Pat Cavit <npm@patcavit.com>",
  "license": "MIT",
  "devDependencies": {
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^0.37.8",
    "eslint-config-arenanet": "^2.0.3",
    "filesize": "^3.3.0",
    "humanize-duration": "^3.7.1",
    "modular-css": "^0.19.0",
    "nodemon": "^1.9.2",
    "rollup": "^0.26.1",
    "zip-dir": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "arenanet",
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    }
  }
}
